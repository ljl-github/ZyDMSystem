@{
    Layout = null;
}
@{ 
    int ID = ViewBag.ID;
}
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap4")
    @Styles.Render("~/Content/css4")
    <style type="text/css">
        .row {
            padding-top:20px;
        }
        .icon{
            color: white;
            width: 70px;
            height: 70px;
            line-height: 64px;
            text-align: center;
            border-radius: 50%;
            font-size: 26px;
            margin-left:20px;
        }
        .icon_1 {
            background-color: #FF9700;
        }
        .icon_2 {
            background-color: #0094ff;
        }
        a{
            display:inline-block;
            width:78px;
            height:38px;
            line-height:38px;
            text-align:center;
            border-radius:15px;
            border:1px solid gray;
            color:black;
            
        }
        a:hover{
            text-decoration:none;
            cursor:pointer;
            color:black;
            background-color:rgba(128, 128, 128,0.2);
        }
    </style>
</head>
<body>
    <h2>个人中心</h2>
    <br />
    <div class="">
        <div class="row">
            <div class="icon icon_1">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-lines-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm7 1.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5zm0-3a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5zm2 9a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5z" />
                </svg>
            </div>
            <div class="col-lg-7">
                <h5>编辑资料</h5>
                <h6 class="text-muted">及时更新个人信息,保障个人安全</h6>
            </div>
            <div class="col-lg-2">
                <a href="/Home/MyInfo/@ID">编辑</a>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="icon icon_2 ">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-lock" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M11.5 8h-7a1 1 0 0 0-1 1v5a1 1 0 0 0 1 1h7a1 1 0 0 0 1-1V9a1 1 0 0 0-1-1zm-7-1a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h7a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-7zm0-3a3.5 3.5 0 1 1 7 0v3h-1V4a2.5 2.5 0 0 0-5 0v3h-1V4z" />
                </svg>
            </div>
            <div class="col-lg-7">
                <h5>修改密码</h5>
                <h6 class="text-muted">定期修改密码，提高安全系数</h6>
            </div>
            <div class="col-lg-2">
                <a href="/Home/ReplacePwd/@ID">修改</a>
            </div>
        </div>
        <hr />
    </div>
</body>
</html>

